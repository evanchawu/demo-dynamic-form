<%= simple_form_for(@machine) do |f| %>
  <%= f.input :name, label: false, placeholder:'商品名稱' %>
  <% if @machine.parts.any? %>
    <%= f.simple_fields_for :parts do |part| %>
      <%= render 'part_fields', f: part %>
    <% end %>
  <% end %>

  <div class="links">
    <%= link_to_add_association '新增組件', f, :parts, class:'btn btn-info' %>
    <%= f.button :submit, nil, class:'btn btn-success' %>
  </div>
<% end %>

